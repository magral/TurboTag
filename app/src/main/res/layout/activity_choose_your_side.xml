<?xml version="1.0" encoding="utf-8"?>
<com.example.leah.edg_touch.CustomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/custom_layout_CYS"
    tools:context="com.example.leah.edg_touch.ChooseYourSide">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/tp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/bt"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:id="@+id/choosesidebanner"
        android:layout_below="@+id/tp"
        android:layout_centerHorizontal="true" />

    <com.example.leah.edg_touch.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:id="@+id/CreateRoom"
        android:layout_below="@+id/tp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <com.example.leah.edg_touch.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join"
        android:id="@+id/JoinRoom"
        android:layout_below="@+id/CreateRoom"
        android:layout_alignLeft="@+id/CreateRoom"
        android:layout_alignStart="@+id/CreateRoom"
        android:layout_marginTop="68dp" />



</com.example.leah.edg_touch.CustomLayout>

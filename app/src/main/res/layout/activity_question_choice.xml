<?xml version="1.0" encoding="utf-8"?>
<com.example.leah.edg_touch.CustomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/qlayout"
    tools:context="com.example.leah.edg_touch.QuestionChoice">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/choosePackBanner"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/qtop"
        android:layout_above="@+id/Questionp1" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/qtop" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/qbot"
        android:layout_alignParentLeft="true" />

    <com.example.leah.edg_touch.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sample"
        android:id="@+id/Questionp1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</com.example.leah.edg_touch.CustomLayout>

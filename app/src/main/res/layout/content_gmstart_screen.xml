<?xml version="1.0" encoding="utf-8"?>
<com.example.leah.edg_touch.CustomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_gmstart_screen"
    tools:context="com.example.leah.edg_touch.GMStartScreen">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:id="@+id/sgm_top_border"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sgm_top_border"
        android:layout_above="@+id/sgm_bottom_border"
        android:id="@+id/sgm_bg"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Room Number:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:id="@+id/playerRN"
        android:layout_above="@+id/startGame" />

    <com.example.leah.edg_touch.CustomButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorText"
        android:text="Start Game"
        android:textSize="16pt"
        android:id="@+id/startGame"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"
        android:layout_above="@+id/sgm_bottom_border" />

    <ImageView
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/sgm_bottom_border"
    android:layout_alignParentBottom="true" />


</com.example.leah.edg_touch.CustomLayout>
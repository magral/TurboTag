<?xml version="1.0" encoding="utf-8"?>
<com.example.leah.edg_touch.CustomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bluebg"
    tools:context="com.example.leah.edg_touch.BlueAnswerScreen">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/top"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/bot"
        android:layout_alignParentLeft="true" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/sendBlue"
        android:id="@+id/blueansbg"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ANSWER HERE"
        android:textColor="@color/colorText"
        android:textSize="16pt"
        android:id="@+id/txtMessageToSend"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />

    <com.example.leah.edg_touch.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addMessage"
        android:text="Send Answer"
        android:id="@+id/sendBlue"
        android:layout_above="@+id/bot"
        android:layout_centerHorizontal="true" />


</com.example.leah.edg_touch.CustomLayout>

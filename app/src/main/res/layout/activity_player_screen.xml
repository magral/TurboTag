<?xml version="1.0" encoding="utf-8"?>
<com.example.leah.edg_touch.CustomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/redbg"
    tools:context="com.example.leah.edg_touch.RedAnswerScreen">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/top_border"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/top_border"
        android:layout_above="@+id/bottom_border"
        android:id="@+id/answerbgred"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/top_border"
        android:layout_above="@+id/bottom_border"
        android:id="@+id/buttonLayoutRed"
        android:orientation="vertical">

        <!-- Add buttons for answers here -->
    </LinearLayout>
    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:fontFamily=""
        android:textColor="@color/colorText"
        android:textSize="16pt"
        android:id="@+id/answerRed"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/bottom_border"
        android:layout_alignParentLeft="true" />

</com.example.leah.edg_touch.CustomLayout>
